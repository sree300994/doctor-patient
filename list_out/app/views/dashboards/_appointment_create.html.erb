<%= form_tag(dashboards_patient_create_path, method: :post) do %>

	<%= text_field_tag :diseases, nil, placeholder: 'Enter your Name', style: 'border-radius: 4px;' %> <br/><br/>

	<%= select_tag "doctor_id", options_for_select(@doctors.collect {|doctor| [doctor["name"], doctor["id"]]}), nil, placeholder: 'Select Doctor', style: 'border-radius: 4px;' %> <br/><br/>

  <%= select_tag "patient_id", options_for_select(@patients.collect {|patient| [patient["name"], patient["id"]]}), nil, placeholder: 'Select Patient', style: 'border-radius: 4px;' %> <br/><br/>

	<%= submit_tag "Submit", class: "btn btn-success" %>
<% end %>